	"version": "0.2.0",
	"configurations": [
    	{
        	"name": "Python: Odoo",
        	"type": "python",
        	"request": "launch",
        	"stopOnEntry": false,
        	"python": "${command:python.interpreterPath}",
        	"console": "integratedTerminal",
        	"program": "${workspaceRoot}/odoo/odoo-bin",
        	"args":[
				"-c","${workspaceRoot}/conf/odoo.conf",
				"-u", "estate",
				"--dev", "xml"
        	],
        	"cwd": "${workspaceRoot}"
    	}
	]
}